{
    "name": "labrute/labrute",
    "description": "LaBrute - Arena fighting game clone",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*"
    },
    "autoload": {
        "classmap": [
            "brute.class.php",
            "fight.class.php",
            "view.class.php",
            "skills.class.php",
            "random.class.php"
        ],
        "files": [
            "includes/db.php",
            "includes/auth.php"
        ]
    },
    "scripts": {
        "start": "php -S 0.0.0.0:${PORT:-8080} router.php",
        "migrate": "php database/migrate.php"
    },
    "config": {
        "platform": {
            "php": "8.2"
        }
    }
}

